{
    "kind": "collectionType",
    "collectionName": "comments",
    "info": {
        "singularName": "comment",
        "pluralName": "comments",
        "displayName": "Comment",
        "description": "文章评论"
    },
    "options": {
        "draftAndPublish": false
    },
    "attributes": {
        "content": { "type": "text" },
        "authorName": { "type": "string" },
        "authorLink": { "type": "string" },
        "status": {
            "type": "enumeration",
            "enum": ["approved", "pending", "spam"],
            "default": "pending"
        },
        "article": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::article.article",
            "inversedBy": "comments"
        },
        "sourceSite": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::site.site"
        }
    }
}
